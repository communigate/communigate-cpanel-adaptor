	  <label for="WorkDays-Sun">Sun</label>
	  <input type="checkbox" name="WorkDays" value="Mon" id="WorkDays-Mon"<% if ( (accountDefaultPrefs.WorkDays || serverAccountPrefs.WorkDays).join("").indexOf("Mon") > -1 ) { %>checked='checked'<% } %> />
	  <label for="WorkDays-Mon">Mon</label>
