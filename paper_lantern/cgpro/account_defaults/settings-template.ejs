	  <label for="WorkDays-Thu">Thu</label>
	  <input type="checkbox" name="WorkDays" value="Thu" id="WorkDays-Thu"<% if ( (accountDefaultPrefs.WorkDays || serverAccountPrefs.WorkDays).join("").indexOf("Thu") > -1 ) { %>checked='checked'<% } %> />
	  <label for="WorkDays-Thu">Thu</label>
	  <input type="checkbox" name="WorkDays" value="Fri" id="WorkDays-Fri"<% if ( (accountDefaultPrefs.WorkDays || serverAccountPrefs.WorkDays).join("").indexOf("Fri") > -1 ) { %>checked='checked'<% } %> />
	  <label for="WorkDays-Fri">Fri</label>
	  <input type="checkbox" name="WorkDays" value="Sat" id="WorkDays-Sat"<% if ( (accountDefaultPrefs.WorkDays || serverAccountPrefs.WorkDays).join("").indexOf("Sat") > -1 ) { %>checked='checked'<% } %> />
	  <label for="WorkDays-Sat">Sat</label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="number">Default outgoing telephone number:</label>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
	<select id="number" class="form-control">
	  <option value="">None</option>
	  <% for (var number in outhoingNumbers) { %>
	  <option value="<%= number %>" <% if (outhoingNumber == number) { %>selected<% } %> ><%= number %></option>
	  <% } %>
	</select>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="ips">Client IP addresses:</label>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
	<textarea id="ips" class="form-control" rows="8" cols="45"><%= domainSettings.ClientIPs.replace(/\\\e/g, "\n") %></textarea>
      </div>
    </div>
  </div>
  <div class="form-group">
    <button id="save-btn" class="btn btn-primary" value="save">Save</button>
    <span id="save-loading"></span>
  </div>
</div>
