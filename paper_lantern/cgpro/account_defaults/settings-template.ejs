  <div class="form-group">
    <label for="WorkDayStart">Working Hours (start):</label>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
	<select id="WorkDayStart" class="form-control">
	  <option value="default" >Default (<%= (serverAccountPrefs.WorkDayStart / 3600) + ((serverAccountPrefs.WorkDayStart % 3600) ? ":30" : ":00") %>)</option>
	  <% for (var i = 0; i <= 24; i++) { %>
	     <option value="<%= i * 3600 %>" <% if(accountDefaultPrefs.WorkDayStart == (i * 3600) ) { %>selected<% } %> ><%= i + ":00" %></option>
	     <option value="<%= (i + 0.5) * 3600 %>" <% if(accountDefaultPrefs.WorkDayStart == ( (i + 0.5) * 3600) ) { %>selected<% } %> ><%= i + ":30" %></option>
	     <% } %>
	</select>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="WorkDayEnd">Working Hours (end):</label>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
	<select id="WorkDayEnd" class="form-control">
	  <option value="default" >Default (<%= (serverAccountPrefs.WorkDayEnd / 3600) + ((serverAccountPrefs.WorkDayEnd % 3600) ? ":30" : ":00") %>)</option>
	  <% for (var i = 0; i <= 24; i++) { %>
	     <option value="<%= i * 3600 %>" <% if(accountDefaultPrefs.WorkDayEnd == (i * 3600) ) { %>selected<% } %> ><%= i + ":00" %></option>
	     <option value="<%= (i + 0.5) * 3600 %>" <% if(accountDefaultPrefs.WorkDayEnd == ( (i + 0.5) * 3600) ) { %>selected<% } %> ><%= i + ":30" %></option>
	     <% } %>
	</select>
      </div>
    </div>
  </div>

